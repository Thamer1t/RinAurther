const { MongoClient } = require('mongodb');

// Replace the connection string with your own MongoDB URI
const uri = 'mongodb+srv://<username>:<password>@<cluster>.mongodb.net';
const client = new MongoClient(uri, { useNewUrlParser: true, useUnifiedTopology: true });

async function createAnimeDatabase() {
  try {
    await client.connect();
    const database = client.db('animeDB');
    const animeNames = database.collection('animeNames');
    console.log('Successfully connected to MongoDB and created animeDB/animeNames collection');
  } catch (error) {
    console.error(error);
  } finally {
    await client.close();
  }
}

createAnimeDatabase();
